<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">


    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_yellow_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_hamburger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        tools:ignore="contentDescription"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">
                <FrameLayout
                    android:id="@+id/bg_estimatedCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    app:layout_constraintTop_toBottomOf="@+id/top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/bg_mainConsumption"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp"
                    android:background="@drawable/bg_light_yellow">

                    <TextView
                        android:id="@+id/tvTotalCost"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text22"
                        android:textColor="#863B17"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="70dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/text23"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="#863B17"/>

                        <TextView
                            android:id="@+id/tvTotalKwh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/text22"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="#863B17"/>
                    </LinearLayout>

                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:src="@drawable/img_bulb_sticker"
                        tools:ignore="contentDescription"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/bg_mainConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_light_yellow"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_estimatedCost">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/text12"
                    android:textColor="#863B17"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvTotalConsumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@string/text13"
                    android:textColor="#863B17"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/dividerTop"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="30dp"
                    android:background="#863B17" />

                <TextView
                    android:id="@+id/tvTodayKwh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="110dp"
                    android:text="@string/text14"
                    android:textColor="#863B17"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!-- TextView 4 -->
                <TextView
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="135dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/text15"
                    android:textColor="#863B17"
                    android:textSize="13sp" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/bg_areaConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/bg_mainConsumption"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/area1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_yellowish"
                        android:textColorHint="#863B17"
                        app:suffixTextColor="#863B17"
                        android:gravity="center"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_edit"
                        app:endIconTint="#863B17">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etArea1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:hint="@string/text16"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textColor="#863B17"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvArea1Kwh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:text="@string/text19"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:background="@android:color/transparent"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvArea1Percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:text="@string/text20"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        android:gravity="center"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/area1_chart"
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="130dp"
                        android:padding="10dp"/>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/area2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_yellowish"
                        android:textColorHint="#863B17"
                        app:suffixTextColor="#863B17"
                        android:gravity="center"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_edit"
                        app:endIconTint="#863B17">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etArea2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:hint="@string/text17"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textColor="#863B17"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvArea2Kwh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:text="@string/text19"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:background="@android:color/transparent"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvArea2Percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:text="@string/text20"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        android:gravity="center"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/area2_chart"
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="130dp"
                        android:padding="10dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/area3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_yellowish"
                        android:textColorHint="#863B17"
                        app:suffixTextColor="#863B17"
                        android:gravity="center"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_edit"
                        app:endIconTint="#863B17">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etArea3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:hint="@string/text18"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textColor="#863B17"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvArea3Kwh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:text="@string/text19"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:background="@android:color/transparent"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvArea3Percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:text="@string/text20"
                        android:textColor="#863B17"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:background="@android:color/transparent"
                        android:gravity="center"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/area3_chart"
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="130dp"
                        android:padding="10dp"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bg_moreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bg_areaConsumption"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/button"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_light_yellow">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/text25"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="13sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:weightSum="3"
                        android:baselineAligned="false">
                        <ImageView
                            android:id="@+id/ivBatteryImage"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_battery1"
                            tools:ignore="contentDescription"/>

                        <TextView
                            android:id="@+id/tvBatteryLife"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/text29"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="#863B17"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:textSize="25sp"/>
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_light_yellow">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/text26"
                        android:textAlignment="center"
                        android:textColor="#863B17"
                        android:textSize="13sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:baselineAligned="false">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_peak_time"
                                android:layout_gravity="center_horizontal"
                                tools:ignore="contentDescription"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text27"
                                android:layout_marginTop="20dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/tvPeakTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text30"
                                android:layout_marginTop="40dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#863B17"
                                android:textSize="13sp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_value"
                                android:layout_gravity="center_horizontal"
                                tools:ignore="contentDescription"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text28"
                                android:layout_marginTop="20dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/tvPeakValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text19"
                                android:layout_marginTop="40dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="5dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#863B17"
                                android:textSize="13sp"/>
                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/img_historical_analysis"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_img_historical_analysis" />

        <ImageView
            android:id="@+id/img_realtime_monitoring"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_img_realtime_monitoring" />

        <ImageView
            android:id="@+id/img_homepage"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_img_homepage" />

        <ImageView
            android:id="@+id/img_cost_estimation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_img_cost_estimation" />

        <ImageView
            android:id="@+id/img_settings"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_img_settings" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
