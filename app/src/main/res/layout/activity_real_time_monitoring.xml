                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/bg_yellowish"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/area2_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text17"
                    android:textColor="#863B17"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <FrameLayout
                    android:id="@+id/area2_chart_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp">
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Consumption"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/area2_total_consumption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13.1 kWh"
                                android:layout_marginTop="2dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Peak Consumption"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/area2_peak_consumption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="179W at 14:30"
                                android:layout_marginTop="2dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Cost"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/area2_estimated_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱20.57"
                                android:layout_marginTop="2dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share of Total"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/area2_share_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="38%"
                                android:layout_marginTop="2dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/area3_container"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/bg_yellowish"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/area3_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text18"
                    android:textColor="#863B17"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <FrameLayout
                    android:id="@+id/area3_chart_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp">
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Consumption"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/area3_total_consumption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13.1 kWh"
                                android:layout_marginTop="2dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Peak Consumption"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/area3_peak_consumption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="179W at 14:30"
                                android:layout_marginTop="2dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Cost"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/area3_estimated_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱20.57"
                                android:layout_marginTop="2dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share of Total"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/area3_share_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="38%"
                                android:layout_marginTop="2dp"
                                android:textAlignment="center"
                                android:textColor="#863B17"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    
    <LinearLayout
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areas_scroll"
        android:layout_marginTop="10dp">
        
        <View
            android:id="@+id/dot1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_active"
            android:layout_margin="4dp"/>
            
        <View
            android:id="@+id/dot2"
